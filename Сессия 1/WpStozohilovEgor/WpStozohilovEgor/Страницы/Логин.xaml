<Page x:Class="WpStozohilovEgor.Страницы.Логин"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpStozohilovEgor.Страницы"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Логин">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите логин" Style="{StaticResource Login}"/>
            <TextBox x:Name="TextBoxLogin" Margin="0,10,0,10" Width="140"/>
            <TextBlock Text="Введите пароль" Style="{StaticResource Login}"/>
            <PasswordBox x:Name="PasswordBoxPassword" Width="140" Margin="0,10,0,10"/>
            <Button Content="Войти" Click="BtnToComeIn_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
